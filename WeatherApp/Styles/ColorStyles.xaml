<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    
    <!-- App´s color-->
    <LinearGradientBrush x:Key="BackgroundColor" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="LightSkyBlue" Offset="0"/>
        <GradientStop Color="Blue" Offset="1"/>
    </LinearGradientBrush>

    <!-- Color of the App´s border -->
    <SolidColorBrush x:Key="BorderColor" Color="LightBlue"/>
    
    <!-- Color of the App´s border when hovered on-->

    <SolidColorBrush x:Key="BorderColorBrush" Color="LightSkyBlue"/>

    <!-- Color of the text -->
    <SolidColorBrush x:Key="textColor" Color="White"/>

</ResourceDictionary>